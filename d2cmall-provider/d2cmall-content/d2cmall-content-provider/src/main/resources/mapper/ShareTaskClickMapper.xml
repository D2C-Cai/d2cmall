<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.d2c.content.dao.ShareTaskClickMapper">
    <resultMap id="baseMap" type="com.d2c.content.model.ShareTaskClick">
        <result property="id" column="id"/>
        <result property="taskId" column="task_id"/>
        <result property="taskDefId" column="task_def_id"/>
        <result property="title" column="title"/>
        <result property="ip" column="ip"/>
        <result property="status" column="status"/>
        <result property="device" column="device"/>
        <result property="refer" column="refer"/>
        <result property="createDate" column="create_date"/>
        <result property="modifyDate" column="modify_date"/>
        <result property="lastModifyMan" column="last_modify_man"/>
        <result property="creator" column="creator"/>
    </resultMap>

    <select id="countBy" resultType="int">
        SELECT count(*)
        FROM v_share_task_click
        WHERE 1=1
        <if test="shareTaskId!=null">
            AND task_id=#{shareTaskId}
        </if>
        <if test="ip!=null and ip!=''">
            AND ip=#{ip}
        </if>
    </select>

    <update id="doCounted">
		UPDATE v_share_task_click
		SET modify_date = now(),status=1
		WHERE id = #{id}
	</update>

</mapper>