<script>
    function count_price() {
        var total = 0;
        $.each($('.wish-product-title .price'), function (i, d) {
            total += parseFloat($(d).attr('data-price'));
        });
        $('.wish-price .price').text(format_currency(total));
    }

    $.getJSON('/wish/wishJson', function (data) {
        $.each($('.love-words'), function (i, d) {
            if (data.list[i].speakTo.length > 59) {
                data.list[i].speakTo = data.list[i].speakTo.substring(0, 59) + '...';
            }
            $(d).html('<img src="' + data.list[i].headPic + '" alt="" /><div class="love-heart"><p class="title">亲爱的' + data.list[i].who + '：</p><p class="desc">' + data.list[i].speakTo + '</p><p class="name">' + data.list[i].name + '</p><p class="date">' + data.list[i].createDate + '</p></div>');
        });
    });
    setInterval(function () {
        $.getJSON('/wish/wishJson', function (data) {
            $.each($('.love-words'), function (i, d) {
                if (data.list[i].speakTo.length > 59) {
                    data.list[i].speakTo = data.list[i].speakTo.substring(0, 59) + '...';
                }
                $(d).html('<img src="' + data.list[i].headPic + '" alt="" /><div class="love-heart"><p class="title">亲爱的' + data.list[i].who + '：</p><p class="desc">' + data.list[i].speakTo + '</p><p class="name">' + data.list[i].name + '</p><p class="date">' + data.list[i].createDate + '</p></div>');
            });
        });
    }, '15000');
    $('.publish-words').click(function () {
        $.getJSON('/member/islogin', function (data) {
            if (data.login == false) {
                $('body').data('function', 'location.reload();');
                user_login();
            } else {
                <#if wish.speakTo!=''>
                $('#love-view-box').addClass('show');
                <#else>
                $('#love-pub-box').addClass('show');
                </#if>
            }
        });
    });

    $('.wish-modify').click(function () {
        $('#love-view-box').removeClass('show');
        $('#love-pub-box').addClass('show');
    });
    $('.box-close').click(function () {
        $(this).parent().removeClass('show');
    });
    $('.remove-item').click(function () {
        var obj = $(this).parent();
        var id = $(this).attr('data-id');
        $.post('/wishItem/delete', {id: id}, function (data) {
            if (data.result.status == 1) {
                obj.slideUp(function () {
                    $(this).remove();
                    count_price();
                });
                $('.wish-item[data-id=' + id + ']').html('<div class="add-item"><a href="/product/list" target="_blank">添加心仪的商品</a></div>');
            }
        }, 'json');
        return false;
    });
    $('.pub-avatar').click(function () {
        $('.avatar').toggle();
        return false;
    });
    $('.avatar img').click(function () {
        var url = $(this).attr('src');
        $('.pub-avatar img').attr('src', url);
        $('input[name=headPic]').val(url);
        $('.avatar').slideUp();
        return false;
    });
    $('.love-share').click(function () {
        $('#love-share-div .share-box').attr("data-config", "{'title':'七夕表白 ','desc':'" + $('#wish-name').text() + "向你表白了，赶快去看看！','url':'${base}/qixi/love/${(LOGINMEMBER.id)!}','pic':'//ww2.sinaimg.cn/mw1024/564fe772gw1eisagi9keij20dw0nsgpo.jpg'}");
        $('#love-share-div').show();
        return false;
    });
    $('#love-form').submit(function () {
        if ($('input[name=who]').val() == '') {
            $.flash_tips('填下你想要表白对象的称呼吧。', 'warning');
            $('input[name=who]').focus();
            return false;
        }
        if ($('input[name=when]').val() == '') {
            $.flash_tips('填写你第一次见TA的时间。', 'warning');
            $('input[name=when]').focus();
            return false;
        }
        if ($('input[name=what]').val() == '') {
            $.flash_tips('你到底喜欢TA什么', 'warning');
            $('input[name=what]').focus();
            return false;
        }
        if ($('input[name=haveDate]:checked').size() == 0) {
            $.flash_tips('选择一下有没有约会过', 'warning');
            $('input[name=havaData]').focus();
            return false;
        }
        if ($('input[name=haveDate]:checked').val() == '1' && $('input[name=dateWhen]').val() == '') {
            $.flash_tips('什么时候约会的呢', 'warning');
            $('input[name=dateWhen]').focus();
            return false;
        }
        if ($('textarea[name=speakTo]').val() == '') {
            $.flash_tips('你不想说点什么吗', 'warning');
            $('textarea[name=speakTo]').focus();
            return false;
        }
        if ($('input[name=headPic]').val() == '') {
            $.flash_tips('选择一个头像吧', 'warning');
            $('.pub-avatar').trigger('click');
            return false;
        }
        $.post($(this).attr('action'), $(this).serialize(), function (data) {
            $('#love-pub-box').removeClass('show');
            $('#love-view-box').addClass('show');
            var words = '<p>' + data.wish.who + '，你造吗，' + data.wish.when + '，那是我们第一次见面，有一种心动的感觉荡漾开来，让我明白什么叫做一见倾心，一见钟情。</p>\
		<p>你的' + data.wish.what + '深深地俘获了我的心，我就这样陷在被你包围的小情绪中，你的每一个眼神、每一个动作都让我无比喜欢，不能自拔。</p>';
            if (data.wish.dateWhen) {
                words += '<p>' + data.wish.dateWhen + '，这是我们第一次约会的日子，对我来说，这个日子与我的生日一样重要，足以铭记一生。这个七夕节，我通过D2C的平台向你发出爱的告白：</p>\
				<p>' + data.wish.speakTo + '</p>';
            } else {
                words += '<p>我一直不够自信，不敢向你告白同你约会，眼看七夕就要到了，我鼓起勇气，通过D2C的平台向你发出爱的告白：' + data.wish.speakTo + '</p>';
            }
            $('#love-view-text').html(words);
        }, 'json');
        return false;
    });
</script>
